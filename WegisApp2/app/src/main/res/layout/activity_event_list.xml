<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EventListActivity"
    android:background="@drawable/concept_bg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="집 앞 이벤트"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <View
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:background="@drawable/square"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/topPanel"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topPanel"
        app:layout_constraintBottom_toBottomOf="@+id/topPanel"
        app:layout_constraintVertical_bias="0.3"/>



    <View
        android:layout_width="400dp"
        android:layout_height="56dp"
        android:background="#ffffff"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="452dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        android:id="@+id/tab"/>


    <!--///////////하단 탭////////////////-->


    <Button
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:id="@+id/tabBtn1"
        android:background="@drawable/tab_off_1"
        app:layout_constraintLeft_toLeftOf="@id/tab"
        app:layout_constraintRight_toRightOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        app:layout_constraintTop_toTopOf="@id/tab"

        app:layout_constraintHorizontal_bias="0.08"
        />

    <Button
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:id="@+id/tabBtn2"
        android:background="@drawable/tab_on_2_alter"
        app:layout_constraintLeft_toLeftOf="@id/tab"
        app:layout_constraintRight_toRightOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        app:layout_constraintTop_toTopOf="@id/tab"

        app:layout_constraintHorizontal_bias="0.35"
        />


    <Button
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:id="@+id/tabBtn3"
        android:background="@drawable/tab_off_3"
        app:layout_constraintLeft_toLeftOf="@id/tab"
        app:layout_constraintRight_toRightOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        app:layout_constraintTop_toTopOf="@id/tab"

        app:layout_constraintHorizontal_bias="0.62"
        />


    <Button
        android:layout_width="56dp"
        android:layout_height="50dp"
        android:id="@+id/tabBtn4"
        android:background="@drawable/tab_off_4"
        app:layout_constraintLeft_toLeftOf="@id/tab"
        app:layout_constraintRight_toRightOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        app:layout_constraintTop_toTopOf="@id/tab"

        app:layout_constraintHorizontal_bias="0.88"
        />


</android.support.constraint.ConstraintLayout>


